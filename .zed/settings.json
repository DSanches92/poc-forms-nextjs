{
  "languages": {
    "TypeScript": {
      "language_servers": [
        "typescript-language-server",
        "tailwindcss-language-server",
        "eslint",
      ],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fixAll.eslint": true,
      },
    },
    "TSX": {
      "language_servers": [
        "typescript-language-server",
        "tailwindcss-language-server",
        "eslint",
      ],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fixAll.eslint": true,
      },
    },
    "JavaScript": {
      "language_servers": [
        "typescript-language-server",
        "tailwindcss-language-server",
        "eslint",
      ],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
    },
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "classList", "ngClass"],
        "experimental": {
          "classRegex": [
            ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
            ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
          ],
        },
      },
    },
  },
}
